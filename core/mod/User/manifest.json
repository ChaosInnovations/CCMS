{
    "module_data": {
        "name":"User",
        "description":"Manage user accounts",
        "type":"Module",
        "version":[1, 0, 0, 0],
        "release_date":"2019-06-23",
        "author": {
            "name":"Thomas Boland",
            "email":"hello@thomasboland.me",
            "website":"http://ccms.thomasboland.me"
        }
    },

    "dependencies": {
        "libraries": [
            {"name":"CCMS", "min_version":[1, 9, 1, 0]},
            {"name":"Mailer", "min_version":[1, 0, 0, 0]}
        ],
        "modules": [
            {"name":"Bootstrap", "min_version":[4, 1, 1, 0]},
            {"name":"Database", "min_version":[1, 0, 0, 0]},
            {"name":"FireSock", "min_version":[1, 0, 0, 0]},
            {"name":"FontAwesome", "min_version":[5, 0, 13, 0]},
            {"name":"JQuery", "min_version":[3, 3, 1, 0]},
            {"name":"ModuleMenu", "min_version":[1, 0, 0, 0]},
            {"name":"Page", "min_version":[1, 0, 0, 0]},
            {"name":"Placeholders", "min_version":[1, 0, 0, 0]},
            {"name":"SecureMenu", "min_version":[1, 0, 0, 0]}
        ]
    },

    "routes": [
        {"rank":101, "hook":"/.*/",                                           "target":"\\Mod\\User::hookVerifyConfiguration",      "description":"Verify database configuration"},
        {"rank":104, "hook":"/^web:.*/",                                      "target":"\\Mod\\User::hookAuthenticateFromRequest",  "description":"Authenticate user (or anonymous)"},
        {"rank":200, "hook":"/^web:\\/?api\\/checkuser\\/?$/i",               "target":"\\Mod\\User::hookCheckUser",                "description":"Check that username is correct"},
        {"rank":200, "hook":"/^web:\\/?api\\/checkpass\\/?$/i",               "target":"\\Mod\\User::hookCheckPassword",            "description":"Check that password is correct"},
        {"rank":200, "hook":"/^web:\\/?api\\/newtoken\\/?$/i",                "target":"\\Mod\\User\\AccountManager::hookNewToken", "description":"Create a new token if authenticated"},
        {"rank":200, "hook":"/^web:\\/?api\\/user\\/new\\/?$/i",              "target":"\\Mod\\User::hookNewUser",                  "description":"Create a new user"},
        {"rank":200, "hook":"/^web:\\/?api\\/user\\/edit\\/?$/i",             "target":"\\Mod\\User::hookEditUser",                 "description":"Edit a user"},
        {"rank":200, "hook":"/^web:\\/?api\\/user\\/remove\\/?$/i",           "target":"\\Mod\\User::hookRemoveUser",               "description":"Remove a user"},
        {"rank":200, "hook":"/^web:\\/?api\\/user\\/password\\/reset\\/?$/i", "target":"\\Mod\\User::hookPasswordReset",            "description":"Reset password to default"},
        {"rank":200, "hook":"/^web:\\/?api\\/user\\/password\\/edit\\/?$/i",  "target":"\\Mod\\User::hookPasswordChange",           "description":"Change password"},
        {"rank":393, "hook":"/(?!.*\\.[a-z]*$)^web:.*$/i",                    "target":"\\Mod\\User::hookMenu",                     "description":"Add menus to admin menu"}
    ],

    "module_firesock": {
        "subscriptions": [
            {"hook":"user", "target":"\\Mod\\User\\UserSubscription"}
        ]
    },

    "module_placeholders": {
        "placeholders": [
            {"hook":"/^loginform$/i", "target":"\\Mod\\User::placeholderLoginForm"}
        ]
    }
}